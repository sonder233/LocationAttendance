<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="600px"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <EditText
        android:id="@+id/et_group_id"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:layout_height="80px"/>
    <EditText
        android:id="@+id/et_group_name"
        android:layout_width="match_parent"
        android:layout_height="60px"
        app:layout_constraintTop_toBottomOf="@id/et_group_id"
        android:layout_marginTop="30px"/>
    <EditText
        android:id="@+id/et_group_creator"
        android:layout_width="match_parent"
        android:layout_height="60px"
        app:layout_constraintTop_toBottomOf="@id/et_group_name"
        android:layout_marginTop="30px"/>
    <Button
        android:id="@+id/bt_create_group"
        android:layout_width="match_parent"
        android:layout_height="100px"
        app:layout_constraintTop_toBottomOf="@id/et_group_creator"
        android:text="创建"
        />
</androidx.constraintlayout.widget.ConstraintLayout>