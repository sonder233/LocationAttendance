<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CreateGroupActivity">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/create_group_toolbar"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:background="#ffffff"
        app:layout_constraintTop_toTopOf="parent"
        android:fitsSystemWindows="true">
    </androidx.appcompat.widget.Toolbar>
    <ImageView
        android:id="@+id/create_group_back"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:src="@drawable/create_group_back"
        app:layout_constraintTop_toBottomOf="@id/create_group_toolbar"
        />
    <TextView
        app:layout_constraintBottom_toBottomOf="@id/create_group_back"
        app:layout_constraintLeft_toLeftOf="@id/create_group_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="签到和打卡"
        android:textColor="#ffffff"
        android:textSize="30dp"
        android:textStyle="bold"
        android:typeface="sans"
        android:layout_marginBottom="40dp"
        android:layout_marginLeft="20dp"/>
    <TextView
        app:layout_constraintBottom_toBottomOf="@id/create_group_back"
        app:layout_constraintLeft_toLeftOf="@id/create_group_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="签到、打开，帮您满足考勤需求"
        android:textColor="#ffffff"
        android:textSize="20dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="20dp"/>
        android:layout_marginLeft="20dp"/>
    <TextView
        android:id="@+id/tv_group_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/create_group_back"
        app:layout_constraintLeft_toLeftOf="parent"
        android:text="群名称"
        android:textColor="#000000"
        android:textSize="20dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="30dp"/>
    <EditText
        android:id="@+id/et_group_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBaseline_toBaselineOf="@id/tv_group_name"
        android:textSize="24dp"
        android:layout_marginRight="40dp"
        android:gravity="right"
        android:background="@drawable/edit_back"
        />
    <TextView
        android:id="@+id/tv_group_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tv_group_name"
        app:layout_constraintLeft_toLeftOf="parent"
        android:text="群号"
        android:textSize="20dp"
        android:textColor="#000000"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="30dp"/>
    <EditText
        android:id="@+id/et_group_id"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBaseline_toBaselineOf="@id/tv_group_id"
        android:textSize="24dp"
        android:text="00000001"
        android:textColor="#C9C6C5 "
        android:layout_marginRight="40dp"
        android:gravity="right"
        android:focusable="false"
        android:background="@drawable/edit_back"/>

    <Button
        android:id="@+id/bt_create_group"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="30dp"
        android:layout_marginBottom="28dp"
        android:background="@drawable/button_drawable"
        android:text="创建"
        android:textColor="#ffffff"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_editor_absoluteX="30dp" />
</androidx.constraintlayout.widget.ConstraintLayout>