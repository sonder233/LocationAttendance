<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="100dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/main_group_icon"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginLeft="20dp"
        android:src="@drawable/icon_group_head"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.45" />

    <TextView
        android:id="@+id/main_group_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="群聊名称"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@id/main_group_icon"
        android:textSize="20dp"
        android:textColor="#000000"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"/>
    <TextView
        android:id="@+id/main_group_lastMsg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="XX:我签完到了"
        app:layout_constraintTop_toBottomOf="@id/main_group_name"
        app:layout_constraintLeft_toRightOf="@id/main_group_icon"
        android:textSize="16dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="4dp"/>
    <ImageView
        android:id="@+id/main_group_isRead"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginRight="30dp"
        android:src="@drawable/red_dot_icon"/>
</androidx.constraintlayout.widget.ConstraintLayout>