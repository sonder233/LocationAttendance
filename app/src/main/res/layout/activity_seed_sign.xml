<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".sign.SendSignActivity">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/map_toolbar"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#B0DAF1"
        app:layout_constraintTop_toTopOf="parent"></androidx.appcompat.widget.Toolbar>

    <com.baidu.mapapi.map.MapView
        android:id="@+id/send_sign_map"
        app:layout_constraintTop_toBottomOf="@id/map_toolbar"
        app:layout_constraintBottom_toTopOf="@id/send_sign_area"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:clickable="true"
        />
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/send_sign_area"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        app:layout_constraintBottom_toBottomOf="parent">
        <TextView
            android:id="@+id/tv_group_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:text="当前位置"
            android:textColor="#000000"
            android:textSize="20dp"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="30dp"/>
        <EditText
            android:id="@+id/send_sign_currentEt"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBaseline_toBaselineOf="@id/tv_group_name"
            android:textSize="18dp"
            android:layout_marginRight="40dp"
            android:gravity="right"
            android:background="@drawable/edit_back"
            android:text="河南大学金明校区6号综合楼"
            android:focusable="false"
            />
        <TextView
            android:id="@+id/tv_group_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/send_sign_currentEt"
            app:layout_constraintLeft_toLeftOf="parent"
            android:text="签到时间范围"
            android:textSize="20dp"
            android:textColor="#000000"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="30dp"/>

        <Spinner
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBaseline_toBaselineOf="@id/tv_group_id"
            android:id="@+id/time_spinner"
            android:entries="@array/spingarr"
            android:layout_marginRight="40dp"
            android:gravity="right"

            />
        <Button
            android:id="@+id/bt_create_group"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_margin="30dp"
            android:layout_marginBottom="28dp"
            android:background="@drawable/button_drawable"
            android:text="创建"
            android:textColor="#ffffff"
            android:textSize="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:layout_editor_absoluteX="30dp" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>